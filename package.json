{
  "name": "unified-args",
  "version": "3.1.1",
  "description": "Create CLIs for unified processors",
  "license": "MIT",
  "keywords": [
    "unified",
    "processor",
    "engine",
    "cli",
    "arguments"
  ],
  "repository": "https://github.com/unifiedjs/unified-args",
  "bugs": "https://github.com/unifiedjs/unified-args/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "engines": {
    "node": ">=0.11.0"
  },
  "dependencies": {
    "camelcase": "^4.0.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.1",
    "minimist": "^1.2.0",
    "text-table": "^0.2.0",
    "unified-engine": "^3.0.0"
  },
  "files": [
    "index.js",
    "lib/"
  ],
  "devDependencies": {
    "bail": "^1.0.0",
    "execa": "^0.7.0",
    "nyc": "^11.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "strip-ansi": "^4.0.0",
    "tape": "^4.4.0",
    "touch": "^3.0.0",
    "unified": "^6.0.0",
    "xo": "^0.18.0",
    "xtend": "^4.0.1"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build": "npm run build-md",
    "lint": "xo",
    "test-api": "node test/index.js",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "no-eq-null": "off",
      "eqeqeq": "off",
      "guard-for-in": "off",
      "max-lines": "off"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
